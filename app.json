{
  "id": "nl.hdg.mqtt",
  "version": "2.2.0",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "name": {
    "en": "MQTT Hub",
    "nl": "MQTT Hub"
  },
  "description": {
    "en": "Turn your Homey into a HUB and let external applications discover & control all your connected devices.",
    "nl": "Maak van je Homey een HUB. Geef externe applicaties de mogelijkheid om al je apparaten te vinden en er mee te communiceren."
  },
  "category": [
    "tools",
    "internet"
  ],
  "permissions": [
    "homey:manager:api",
    "homey:app:nl.scanno.mqtt"
  ],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Harrie de Groot",
    "email": "harriedegroot@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Harrie de Groot",
        "email": "harriedegroot@gmail.com"
      },
      {
        "name": "Menno van Grinsven",
        "email": "mgrinsven@gmail.com"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "harriedegroot"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/harriedegroot/nl.hdg.mqtt/issues"
  },
  "drivers": [
    {
      "id": "device",
      "name": {
        "en": "MQTT Device",
        "nl": "MQTT Apparaat"
      },
      "class": "other",
      "capabilities": [
        "onoff"
      ],
      "images": {
        "large": "/drivers/device/assets/images/large.png",
        "small": "/drivers/device/assets/images/small.png"
      },
      "pair": [
        {
          "id": "device",
          "navigation": {
            "next": "capabilities"
          }
        },
        {
          "id": "capabilities",
          "navigation": {
            "next": "done"
          }
        },
        {
          "id": "capability",
          "navigation": {
            "prev": "capabilities",
            "next": "capabilities"
          }
        },
        {
          "id": "done"
        }
      ]
    },
    {
      "id": "homie",
      "name": {
        "en": "Homie Discovery",
        "nl": "Homie Discovery"
      },
      "class": "other",
      "capabilities": [
        "onoff"
      ],
      "images": {
        "large": "/drivers/device/assets/images/large.png",
        "small": "/drivers/device/assets/images/small.png"
      },
      "pair": [
        {
          "id": "topic"
        },
        {
          "id": "discover",
          "navigation": {
            "prev": "topic"
          }
        }
      ]
    }
  ]
}